<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
    <ImageView android:id="@+id/id002a" 
        android:layout_width="40dp" 
        android:layout_height="40dp" 
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" 
        android:src="@drawable/drawable0060" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView android:textSize="16sp" 
        android:gravity="center_vertical" 
        android:id="@+id/id0046"
        
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="10dp"
        android:text=""
        android:layout_below="@+id/id0045" 
        android:layout_alignLeft="@+id/id0045"/>
    <TextView android:id="@+id/id0045"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" 
        android:text="default_name"
        android:ems="10"
        android:layout_toRightOf="@+id/id002a"
        android:layout_alignTop="@+id/id002a"/>
    <TextView
        android:id="@+id/id0051"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" 
        android:text="00:00" 
        android:layout_above="@+id/id0046" 
        android:layout_alignParentRight="true"/>
</RelativeLayout>
